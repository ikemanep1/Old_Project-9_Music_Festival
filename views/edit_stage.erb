<h1>Update <%= @stage.name() %></h1>

<form action="/stages/<%= @stage.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Stage</label>
  <input id="name" name="name" type="text">
  <label for="location">Rename Location</label>
  <input id="location" name="location" type="text">

  <button type="submit">Update</button>
</form>

<form action="/stages/<%= @stage.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete stage</button>
</form>

<p><a href="/stages">Return to stage list</a></p>
